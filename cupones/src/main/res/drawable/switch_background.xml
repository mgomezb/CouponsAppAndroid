<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_desactivated" />
            <stroke android:width="1dp" android:color="@color/switch_border"/>
            <size android:width="56dp" android:height="25dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_activated"/>
            <stroke android:width="1dp" android:color="@color/switch_border"/>
            <size android:width="56dp" android:height="25dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>