<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:startColor="@color/background_login_end" android:endColor="@color/background_login_end"  />
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:startColor="@color/background_login_end" android:endColor="@color/background_login_end"  />
        </shape>
    </item>

    <item
        android:state_activated="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:startColor="@color/background_login_end" android:endColor="@color/background_login_end"  />
        </shape>
    </item>

    <item
        android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:startColor="@color/background_login_end" android:endColor="@color/background_login_end"  />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:startColor="@color/background_login" android:endColor="@color/background_login_end"  />
        </shape>
    </item>
</selector>