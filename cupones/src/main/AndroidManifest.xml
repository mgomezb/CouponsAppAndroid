<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mgomez.cuponesmemoria">


    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".CouponApplication"
        android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/AppTheme">

        <activity android:name=".activities.CouponActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.ConfigurationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Tutorial"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.NotificationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Register"
            android:screenOrientation="portrait"/>

        <service android:name=".services.BeaconService" android:exported="false">
            <intent-filter>
                <action android:name="com.mgomez.cuponesmemoria.services.BeaconService"/>
            </intent-filter>
        </service>

        <service android:name=".services.GeofenceIntentService"
            android:exported="false"/>

        <service android:name=".services.GetCouponService" android:exported="false">
            <intent-filter>
                <action android:name="com.mgomez.cuponesmemoria.services.GetCouponService"/>
            </intent-filter>
        </service>

        <receiver android:name="com.mgomez.cuponesmemoria.services.ReceiverBoot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED">
                    <category android:name="android.intent.category.HOME"/>
                </action>
            </intent-filter>
        </receiver>

        <activity android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" />

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/fb_id"/>
    </application>

</manifest>
